<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/storm_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:contentDescription="@string/cyclone_satelline_image"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/as_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:padding="15dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:hint="Loading ...."
                android:text="" />

            <TextView
                android:id="@+id/as_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Loading ...."
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="" />

            <TextView
                android:id="@+id/as_season"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Loading ...."
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="" />

            <TextView
                android:id="@+id/as_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Loading ...."
                android:padding="15dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:orientation="horizontal" >
            <Button
                android:id="@+id/see_map"
                android:text="@string/track_on_map"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"

                />

            <Button
                android:id="@+id/see_details"
                android:text="@string/more_details"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>


        </LinearLayout>

            <TableLayout
                android:id="@+id/table_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_centerHorizontal="true" >
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>